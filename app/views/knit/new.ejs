<div class="container auth">
  <div id="big-form" class="well auth-box">
    <form id="new-shop-form" enctype="multipart/form-data" method="POST">
      <fieldset>
        <legend>Add a new knit shop</legend>
        <div class="form-group">
          <label class=" control-label" for="textinput">Shop name</label>
          <div class="">
            <input id="shop-name" name="knit[name]" placeholder="Name" class="form-control input-md" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class=" control-label" for="textinput">Shop address</label>
          <div class="">
            <input id="shop-address" name="knit[address]" placeholder="Address" class="form-control input-md" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class=" control-label" for="textinput">Shop phone number</label>
          <div class="">
            <input id="shop-phone" name="knit[phone]" placeholder="Phone" class="form-control input-md" type="text">
          </div>
        </div>

        <div class="form-group">
          <!-- <label class=" control-label" for="textinput">Shop photo or image</label> -->
          <div class="">
            <input id="shop-image" name="file" placeholder="Photo" class="form-control" type="file">
          </div>
        </div>

        <div class="form-group">
          <label class=" control-label" for="textinput">Shop email</label>
          <div class="">
            <input id="shop-email" name="knit[email]" placeholder="Email" class="form-control input-md" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class=" control-label" for="textinput">Shop website</label>
          <div class="">
            <input id="shop-website" name="knit[website]" placeholder="website" class="form-control input-md" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class=" control-label" for="textinput">Opening hours</label>
          <div class="">
            <input id="shop-hours" name="knit[hours]" placeholder="Opening hours" class="form-control input-md" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class=" control-label" for="textarea">Special notes about the shop</label>
          <div class="">
            <textarea class="form-control" id="shop-note" name="knit[note]">default text</textarea>
          </div>
        </div>
        <div class="form-group">
          <div class="">
            <button id="new-shop-btn" type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>

<script src="/js/knits/new.js"></script>